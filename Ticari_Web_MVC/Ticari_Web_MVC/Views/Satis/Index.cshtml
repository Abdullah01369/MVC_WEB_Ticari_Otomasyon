@using Entity_Layer.Concrete
@model List<Satis_Hareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<br />
<a href="/Satis/Satis_Hareket_Ekle/" style="margin-left:15px" class="btn btn-info">Satış Ekle</a>

<br />
<br />
<br />
<table class="table table-bordered">
    <tr>

        <th>#</th>
        <th>Ürün Ad</th>    @*kategori->marka->urun*@
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam</th>
        <th>Personel ID</th>
        <th>Tarih</th>
        <th>Cari</th>
        <th>Güncelle</th>
        <th>Sil</th>

    </tr>
    @foreach (var item in Model)
    {
<tr>
    <th>@item.Satis_Id</th>
    <th>@item.Uruns.Urun_Ad</th>
    <td>@item.Adet</td>
    <td>@item.Fiyat</td>
    <td>@item.Toplam_Tutar</td>
    <td>@item.Personel_Id</td> 
    <td>@item.Tarih</td>
    <td>@item.Cari.Cari_Ad.ToUpper()  @item.Cari.Cari_Soyad.ToUpper() </td>    
    <td> <a href="/Satis/Satis_Hareket_Guncelle/@item.Satis_Id" class="btn btn-danger">Güncelle</a></td>
    <td> <a href="/Satis/Satis_Sil/@item.Satis_Id" class="btn btn-warning">Sil</a></td>

</tr>
    }


</table>

