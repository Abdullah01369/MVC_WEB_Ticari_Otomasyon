@using Entity_Layer.Concrete
@model List<Fatura_Kalem>
@{
    ViewBag.Title = "Fatura_Kalem_List";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h2>Fatura Detay</h2>



<br />

<br />
<br />
<br />
<table class="table table-bordered">
    <tr>

        <th>Fatura Id</th>
        <th>Açıklama</th>
        <th>Birim Fiyat</th>
        <th>Miktar</th>
        <th>Toplam Tutar</th>
        <th>Güncelle</th>
        <th>Sil</th>
       

    </tr>
    @foreach (var item in Model)
    {
<tr>
    <th>@item.Fatura_Id</th>
    <td>@item.Aciklama</td>
    <td>@item.Birim_Fiyat</td>
    <td>@item.Miktar</td>
    <td>@item.Tutar</td>
    <td> <a href="/Fatura_Kalem/Fatura_Kalem_Guncelle/@item.Fatura_Kalem_Id" class="btn btn-outline-success">Güncelle</a></td>
    <td> <a href="/Fatura_Kalem/Fatura_Kalem_Ekle/@item.Fatura_Kalem_Id" class="btn btn-outline-warning">Sil</a></td>



</tr>
    }


</table>

