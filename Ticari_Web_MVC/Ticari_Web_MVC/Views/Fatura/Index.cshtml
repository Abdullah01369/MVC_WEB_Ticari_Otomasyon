@using Entity_Layer.Concrete
@model List<Fatura>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h2>FATURALAR</h2>

<br />
<a href="/Fatura/Fatura_Ekle/" style="margin-left:15px" class="btn btn-info">Fatura Ekle</a>

<br />
<br />
<br />
<table class="table table-bordered">
    <tr>

        <th>ID</th>
        <th>Seri No</th>
        <th>Sıra No</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Müşteri</th>
        <th>Toplam Fiyat</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Fatura Kalem Ekle</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Fatura_Id</th>
            <td>@item.Fatura_Seri_No</td>
            <td>@item.Fatura_Sira_No</td>
            <td>@item.Tarih</td>
            <td>@item.Saat</td>
            <td>@item.Cari.Cari_Ad  @item.Cari.Cari_Soyad</td>
          
            <td>@item.Toplam</td>
            <td> <a href="/Fatura/Fatura_Guncelle/@item.Fatura_Id" class="btn btn-danger">Güncelle</a></td>
            <td> <a href="/Fatura/Fatura_Kalem_List/@item.Fatura_Id" class="btn btn-success">Detaylar</a></td>
            <td> <a href="/Fatura_Kalem/Fatura_Kalem_Ekle/@item.Fatura_Id" class="btn btn-outline-info">Fatura Kalem Ekle</a></td>

        </tr>
    }


</table>


<button type="button" class="btn btn-warning" style="background-color:#d95151; color: white" data-toggle="modal" data-target="#Modal1">Popup Penceresi </button>
       
    

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Popup Diyalog.</h2>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.Fatura_Seri_No</td>
                            <td>@x.Fatura_Sira_No</td>
                            <td>@x.Toplam</td>
                        </tr>
                    }
                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>



