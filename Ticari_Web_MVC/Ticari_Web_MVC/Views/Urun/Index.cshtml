@using Entity_Layer.Concrete
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<br />
<a href="/Urun/Urun_Ekle/" style="margin-left:15px" class="btn btn-info">Ürün Ekle</a>

<br />


<br />
<br />
<table id="tbl1" class="table table-bordered">

    <thead>
        <tr>
            <th>#</th>
            <th>Ad</th>
            <th>Marka</th>
            <th>Satış Fiyat</th>
            <th>Alış Fiyat</th>
            <th>Eklenme Tarih</th>
            <th>Kategori Ad</th>
            <th>Stok Sayı</th>
            <th>Görsel</th>
            <th>Detay</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>



    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Urun_Id</th>
            <td>@item.Urun_Ad</td>
            <td>@item.marka.Marka_Ad</td>
            <td>@item.Satis_Fiyat</td>
            <td>@item.Alis_Fiyat</td>
            <td>@item.Urun_Eklenme_Tarih</td>
            <td>@item.kategori.Kategori_Ad</td>
            <td>@item.Stok</td>
            <td>
                <img src="@item.Urun_Gorsel" style="height:100px;width:150px" />
            </td>
            <td> <a href="/Urun/Urun_Detay/@item.Urun_Id" class="btn btn-info">Detay</a></td>

            <td> <a href="/Urun/Urun_Guncelle/@item.Urun_Id" class="btn btn-danger">Güncelle</a></td>
            <td> <a href="/Urun/Urun_Sil/@item.Urun_Id" class="btn btn-warning">Sil</a></td>

        </tr>
    }


</table>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>


<link href="~/Content/bootstrap.css" rel="stylesheet" />


<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>

